<html>
  <head>
    <title>Catflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:type" content="website" />
    <meta property="og:description" content="A Full Stack Single-Page Netflix Clone" />
    <meta property="og:image" content="<%= image_url("preview.png") %>" />
